<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameStore", "Index", "Game", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Games", "GetAllGames", "Game", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Add game", "CreateGame", "Game", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Add publisher", "AddPublisher", "Publisher", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Orders", "GetAllOrders", "Order", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Shippers", "GetAllShippers", "Shipper", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           
            <ul class="nav navbar-nav navbar-right">
                <li class = "navbar-brand" > Game Count @{ Html.RenderAction("GetGameCount", "Game");}</li>
                <li>@Html.ActionLink("Basket", "OpenBasket", "Order", null, new { @class = "glyphicon glyphicon-shopping-cart" })</li>
            </ul>
        </div>
    </div>
    @RenderSection("filters",required: false)
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>