@model GameStore.WEB.Models.ViewModel.Ban.BanViewModel

@{
    ViewBag.Title = "Ban";
}

<h2>Ban</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.BanDurations, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BanDuration,
                   Model.BanDurations,
                    new {@class = "form-control" })
                @Html.ValidationMessageFor(model => model.BanDuration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ban" class="btn btn-default" />
            </div>
        </div>
    </div>
}
